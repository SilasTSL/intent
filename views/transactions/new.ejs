<% layout('layouts/boilerplate')%>
<div class="rows">
    <h1 class="text-center">New Transaction</h1>
    <div class="col-6 offset-3">
        <form action="/transactions" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="transaction[title]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="date">Date</label>
                <input class="form-control" type="text" id="date" name="transaction[date]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <input class="form-control" type="text" id="description" name="transaction[description]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-4">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input class="form-control" type="text" id="price" name="transaction[amount]" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
            </div>
            <div class="d-flex flex-row justify-content-between">
                <button class="btn btn-success">Add Transaction</button>
                <a class="btn btn-danger" href="/transactions">Back</a>
            </div>
        </form>
    </div>
</div>
