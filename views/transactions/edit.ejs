<% layout('layouts/boilerplate')%>
<div class="rows">
    <h1 class="text-center">Edit Transaction</h1>
    <div class="col-6 offset-3">
        <form action="/transactions/<%= transaction._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="transaction[title]" value="<%= transaction.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="date">Date</label>
                <input class="form-control" type="text" id="date" name="transaction[date]" value="<%= transaction.date %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <input class="form-control" type="text" id="description" name="transaction[description]" value="<%= transaction.description %>">
            </div>
            <div class="mb-4">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input class="form-control" type="text" id="price" name="transaction[amount]" value="<%= transaction.amount %>">
                </div>
            </div>
            <div class="d-flex flex-row justify-content-between">
                <button class="btn btn-success">Edit Transaction</button>
                <a class="btn btn-danger" href="/transactions/<%= transaction._id %>">Back</a>
            </div>
        </form>
    </div>
</div>